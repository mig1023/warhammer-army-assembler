<Window x:Class="WarhammerArmyAssembler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarhammerArmyAssembler"
        mc:Ignorable="d"
        Title="Warhammer Army Assembler (WAAgh)" Height="317.42" Width="992.809">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="150"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TreeView x:Name="ArmyList" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type MenuItem}" ItemsSource="{Binding Items}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Title}" Tag="{Binding ID}" MouseDown="UnitInArmyList_MouseDown" />
                        <TextBlock Text="{Binding Points}"  Foreground="Green"/>
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

        <GridSplitter  Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Width="5" ResizeDirection="Columns" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

        <DataGrid x:Name="ArmyGrid" Grid.Row="0" Grid.Column="3" ColumnWidth="*" GridLinesVisibility="None"  IsReadOnly="True" AllowDrop="True" Drop="ArmyGrid_Drop">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="FontSize" Value="12"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Visibility="Hidden" Header="ID" Binding="{Binding id}"/>
                <DataGridTextColumn Header="" Binding="{Binding Size}" Width="60"/>
                <DataGridTextColumn Header="Отряд" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="M" Binding="{Binding Movement}" Width="40"/>
                <DataGridTextColumn Header="WS" Binding="{Binding WeaponSkill}" Width="40"/>
                <DataGridTextColumn Header="BS" Binding="{Binding BallisticSkill}" Width="40"/>
                <DataGridTextColumn Header="S" Binding="{Binding Strength}" Width="40"/>
                <DataGridTextColumn Header="T" Binding="{Binding Toughness}" Width="40"/>
                <DataGridTextColumn Header="W" Binding="{Binding Wounds}" Width="40"/>
                <DataGridTextColumn Header="I" Binding="{Binding Initiative}" Width="40"/>
                <DataGridTextColumn Header="A" Binding="{Binding Attacks}" Width="40"/>
                <DataGridTextColumn Header="LD" Binding="{Binding Leadership}" Width="40"/>
                <DataGridTextColumn Header="Очки" Binding="{Binding InterfacePoints}" Width="100"/>
                <DataGridTextColumn Header="Особые правила" Binding="{Binding InterfaceRules}"/>
            </DataGrid.Columns>
        </DataGrid>

        <GridSplitter Grid.Row="1" Grid.Column="2" Height="5" ResizeDirection="Rows"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

        <Canvas Grid.Row="2" Grid.Column="2"/>

    </Grid>
</Window>
