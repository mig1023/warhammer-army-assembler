<Window x:Class="WarhammerArmyAssembler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarhammerArmyAssembler"
        mc:Ignorable="d"
        Title="Warhammer Army Assembler (WAAgh)" Height="356.42" Width="992.809">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="150"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TreeView x:Name="ArmyList" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Items}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" Tag="{Binding ID}" MouseDown="UnitInArmyList_MouseDown"/>
                        <TextBlock Text="{Binding PointsModifecated}"  Foreground="Green"/>
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

        <GridSplitter Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Width="5" ResizeDirection="Columns" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

        <DataGrid x:Name="ArmyGrid" Grid.Row="0" Grid.Column="3" ColumnWidth="*" GridLinesVisibility="None"  IsReadOnly="True" AllowDrop="True" Drop="ArmyGrid_Drop" SelectionChanged="ArmyGrid_SelectionChanged">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="FontSize" Value="12"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Visibility="Hidden" Header="ID" Binding="{Binding id}"/>
                <DataGridTextColumn Header="" Binding="{Binding Size}" Width="60"/>
                <DataGridTextColumn Header="Отряд" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="M" Binding="{Binding MovementModifecated}" Width="40" />
                <DataGridTextColumn Header="WS" Binding="{Binding WeaponSkillModifecated}" Width="40" />
                <DataGridTextColumn Header="BS" Binding="{Binding BallisticSkillModifecated}" Width="40" />
                <DataGridTextColumn Header="S" Binding="{Binding StrengthModifecated}" Width="40" />
                <DataGridTextColumn Header="T" Binding="{Binding ToughnessModifecated}" Width="40" />
                <DataGridTextColumn Header="W" Binding="{Binding WoundsModifecated}" Width="40" />
                <DataGridTextColumn Header="I" Binding="{Binding InitiativeModifecated}" Width="40" />
                <DataGridTextColumn Header="A" Binding="{Binding AttacksModifecated}" Width="40" />
                <DataGridTextColumn Header="LD" Binding="{Binding LeadershipModifecated}" Width="40" />
                <DataGridTextColumn Header="Очки" Binding="{Binding InterfacePoints}" Width="100"/>
                <DataGridTextColumn Header="Особые правила" Binding="{Binding InterfaceRules}"/>
            </DataGrid.Columns>
        </DataGrid>

        <GridSplitter Grid.Row="1" Grid.Column="2" Height="5" ResizeDirection="Rows"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

        <Grid Grid.Row="2" Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Stretch" ShowGridLines="False" Width="Auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="55"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label x:Name="unitName" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Content="" Height="42" Width="Auto" FontSize="24"/>
            <Label x:Name="unitSizeLabel" Grid.Row="1" Grid.Column="0" Content="размер отряда" FontSize="16" Height="30" Width="Auto"/>
            <TextBox x:Name="unitSize" Grid.Row="1" Grid.Column="1" Height="32" TextWrapping="Wrap" Text="" FontSize="16" AllowDrop="False" Width="Auto" TextChanged="unitSize_TextChanged"/>
            <Label x:Name="spetialRulesLabel" Grid.Row="2" Grid.Column="0" Content="специальные правила" FontSize="16" Height="29" Width="Auto"/>
            <Label x:Name="spetialRules" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Content="" FontSize="16" Height="29" Width="Auto"/>
            <Label x:Name="spetialAmmunitionLabel" Grid.Row="3" Grid.Column="0" Content="оружие" FontSize="16" Height="29" Width="Auto"/>
            <Label x:Name="spetialAmmunition" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Content="" FontSize="16" Height="29" Width="Auto" />
        </Grid>

    </Grid>
</Window>
