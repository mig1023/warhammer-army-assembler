                    <TreeView x:Name="ArmyList" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectedItemChanged="ArmyList_SelectedItemChanged" SizeChanged="ArmyList_SizeChanged" Padding="4">
                        <TreeView.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White" />
                        </TreeView.Resources>
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="TreeViewItem.IsExpanded" Value="True"/>
                            </Style>
                        </TreeView.ItemContainerStyle>
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Items}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" Tag="{Binding IDView}" MouseDown="UnitInArmyList_MouseDown">
                                        <ToolTipService.ToolTip>
                                            <ToolTip Background="{Binding TooltipColor}" MaxWidth="300" Padding="0">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Padding="8"/>
                                                    <Image Source="{Binding Image}"/>
                                                </StackPanel>
                                            </ToolTip>
                                        </ToolTipService.ToolTip>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding GroupBold}" Value="True">
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ArtefactAlreadyUsed}" Value="True">
                                                        <Setter Property="TextBlock.TextDecorations" Value="Strikethrough"/>
                                                        <Setter Property="TextBlock.Foreground" Value="LightGray"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Artefacts}" Value="True">
                                                        <Setter Property="TextBlock.Foreground" Value="LightGray"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Character}" Value="True">
                                                        <Setter Property="Foreground" Value="LightGray"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding DogsOfWar}" Value="True">
                                                        <Setter Property="Foreground" Value="Gray"/>
                                                        <Setter Property="TextBlock.FontStyle" Value="Italic"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="{Binding PointsView}" MouseDown="UnitInArmyList_MouseDown" Foreground="{Binding InterfaceColor}"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>

                <GridSplitter Grid.Row="0" Grid.Column="2" Grid.RowSpan="5" Width="5" ResizeDirection="Columns" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

                <DataGrid x:Name="ArmyGrid" Grid.Row="0" Grid.Column="3" CanUserAddRows="False" GridLinesVisibility="None"
                          AllowDrop="True" AutoGenerateColumns="False" Drop="ArmyGrid_Drop" RowEditEnding="ArmyGrid_RowEditEnding"
                          LoadingRow="ArmyGrid_LoadingRow" PreviewMouseDown="ArmyGrid_MouseDown" CanUserSortColumns="False"
                          SizeChanged="ArmyGrid_SizeChanged" PreviewMouseWheel="ArmyGrid_PreviewMouseWheel" >
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Visibility="Hidden" Header="ID" Binding="{Binding IDView}"/>
                        <DataGridTextColumn Header="" Binding="{Binding Size, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="45">
                            <DataGridTextColumn.CellStyle>
                                <Style>
                                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                    <Setter Property="UIElement.IsEnabled" Value="{Binding SizableType}" />
                                    <Setter Property="UIElement.Visibility" Value="{Binding VisibleType}" />
                                </Style>
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Unit" Binding="{Binding NameInGrid}" Width="*" MinWidth="120" IsReadOnly="True"/>
                        <DataGridTemplateColumn Width="40">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Label Padding="0" MouseDown="Test_Click" HorizontalContentAlignment="Center">
                                        <TextBlock Text=" test " Foreground="White" Background="{Binding ArmyColor}"/>
                                    </Label>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="M" Binding="{Binding Movement.View}" Width="35" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                    <Setter Property="Background" Value="{Binding Movement.Color}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="WS" Binding="{Binding WeaponSkill.View}" Width="35" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                    <Setter Property="Background" Value="{Binding WeaponSkill.Color}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="BS" Binding="{Binding BallisticSkill.View}" Width="35" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                    <Setter Property="Background" Value="{Binding BallisticSkill.Color}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="S" Binding="{Binding Strength.View}" Width="35" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                    <Setter Property="Background" Value="{Binding Strength.Color}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="T" Binding="{Binding Toughness.View}" Width="35" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                    <Setter Property="Background" Value="{Binding Toughness.Color}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="W" Binding="{Binding Wounds.View}" Width="35" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                    <Setter Property="Background" Value="{Binding Wounds.Color}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="I" Binding="{Binding Initiative.View}" Width="35" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                    <Setter Property="Background" Value="{Binding Initiative.Color}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="A" Binding="{Binding Attacks.View}" Width="35" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                    <Setter Property="Background" Value="{Binding Attacks.Color}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="LD" Binding="{Binding Leadership.View}" Width="35" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                    <Setter Property="Background" Value="{Binding Leadership.Color}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="AS" Binding="{Binding Armour.View}" Width="35" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Ward" Binding="{Binding Ward.View}" Width="35" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Points" Binding="{Binding PointsView}" Width="60" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Special rules" Binding="{Binding RulesView}" Width="*" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="FontSize" Value="10"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <GridSplitter x:Name="unitDetailScrollSplitter" IsEnabled="False" Grid.Row="1" Grid.Column="3" Height="0" ResizeDirection="Rows" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

                <ScrollViewer x:Name="unitDetailScroll" Visibility="Hidden" Grid.Row="2" Grid.Column="3" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"
                              VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Auto" Background="White" SizeChanged="unitDetailScroll_SizeChanged"
                              Drop="ArmyGrid_Drop" AllowDrop="True" DragOver="ArmyGridRow_DragOver">
                    <StackPanel Orientation="Horizontal">
                        <Canvas x:Name="unitDetailHead" Height="Auto" Width="20" Background="White" MouseDown="closeDetail_Click">
                            <Grid Width="{Binding ActualWidth, ElementName=unitDetailHead}" Height="{Binding ActualHeight, ElementName=unitDetailHead}">
                                <Label Content="Close" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-8,0" FontSize="14" Foreground="White">
                                    <Label.LayoutTransform>
                                        <RotateTransform Angle="-90"/>
                                    </Label.LayoutTransform>
                                </Label>
                            </Grid>
                        </Canvas>
                        <Canvas x:Name="unitDetail" VerticalAlignment="Stretch" Width="150" Background="White">
                            <Label x:Name="unitName" Content="" Width="Auto" FontSize="12" Margin="18,15"/>
                        </Canvas>
                    </StackPanel>
                </ScrollViewer>

                <GridSplitter Grid.Row="3" Grid.Column="3" Height="5" ResizeDirection="Rows" IsEnabled="False" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

                <Grid Grid.Row="4" Grid.Column="3" VerticalAlignment="Top" HorizontalAlignment="Stretch" ShowGridLines="False" Width="Auto" Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="57*"/>
                        <ColumnDefinition Width="57*"/>
                        <ColumnDefinition Width="57*"/>
                        <ColumnDefinition Width="52*"/>
                        <ColumnDefinition Width="35*"/>
                        <ColumnDefinition Width="48*"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>

                    <Label x:Name="armyHeroes" Template="{StaticResource statusLabel}" Grid.Row="0" Grid.Column="0" Margin="10 5 0 0" MouseDown="armyHeroes_MouseDown"/>
                    <Label x:Name="armyUnits" Template="{StaticResource statusLabel}" Grid.Row="0" Grid.Column="1" Margin="0 5 0 0" MouseDown="armyUnits_MouseDown"/>
                    <Label x:Name="armyPoints" Template="{StaticResource statusLabel}" Grid.Row="0" Grid.Column="2" Margin="0 5 0 0" MouseDown="armyPoints_MouseDown"/>
                    <Label x:Name="armySize" Template="{StaticResource statusLabel}" Grid.Row="0" Grid.Column="3" Margin="0 5 0 0"  MouseDown="armyModels_MouseDown"/>
                    <Label x:Name="armyCasting" Template="{StaticResource statusLabel}" Grid.Row="0" Grid.Column="4" Margin="0 5 0 0" MouseDown="armyCast_MouseDown"/>
                    <Label x:Name="armyDispell" Template="{StaticResource statusLabel}" Grid.Row="0" Grid.Column="5" Margin="0 5 0 0" MouseDown="armyDispell_MouseDown"/>
                    <Label x:Name="unitDelete" Grid.Row="0" Grid.Column="6" HorizontalContentAlignment="Center" Padding="0 5 0 0" Content="Delete" Background="#FFFF7676" Height="30" Width="Auto" FontSize="12" AllowDrop="True" Drop="unitDelete_Drop" MouseDown="unitDelete_MouseDown"/>
                </Grid>
            </Grid>

            <TextBlock x:Name="startArmyHelpText" Opacity="0.50" AllowDrop="True" Drop="ArmyGrid_Drop" Canvas.Left="0" TextWrapping="Wrap"  Canvas.Top="46" Height="Auto" Width="531" Foreground="#FFB8B8B8" FontSize="22">
                ↖ Main menu<LineBreak/><LineBreak/>
                ← Armybook, double click for detail<LineBreak/><LineBreak/>
                Drop ↓ here your first hero or unit to start your army<LineBreak/><LineBreak/>
                Double click on unit ↓ here for configure it<LineBreak/><LineBreak/>
                Use delete ↘ for throw out unnecessary units<LineBreak/>
            </TextBlock>
        </Canvas>
    </Canvas>
</Window>
