                                <Pen Thickness="1">
                                    <Pen.Brush>
                                        <SolidColorBrush Color="Gray"/>
                                    </Pen.Brush>
                                    <Pen.DashStyle>
                                        <DashStyle Dashes="4,4"/>
                                    </Pen.DashStyle>
                                </Pen>
                            </TextDecoration.Pen>
                        </TextDecoration>
                    </TextDecorationCollection>
                </TextBlock.TextDecorations>
            </TextBlock>
        </ControlTemplate>
        <ControlTemplate TargetType="Label" x:Key="detailProfile">
            <TextBlock Text="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25"/>
        </ControlTemplate>
    </Window.Resources>
    
