                    <ComboBox x:Name="enemyGroup" Height="29" Canvas.Left="37" Canvas.Top="216" Width="279" FontSize="16" SelectionChanged="enemyGroup_SelectionChanged"/>
                    <TextBlock x:Name="enemyForTestText" Text="Enemy for test:" Canvas.Left="37" FontSize="16" TextWrapping="Wrap" Canvas.Top="253"/>
                    <ComboBox x:Name="enemyForTest" Height="29" Canvas.Left="37" Canvas.Top="276" Width="279" FontSize="16" SelectionChanged="enemyForTest_SelectionChanged"/>
