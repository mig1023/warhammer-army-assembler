                    <Image x:Name="armySymbol" DockPanel.Dock="Top" Height="18" Width="Auto" MouseLeftButtonDown="dragWindow_MouseLeftButtonDown" PreviewMouseDown="dragWindowBottom_MouseDown"/>
                    <Label x:Name="dragWindowHeadBottom" DockPanel.Dock="Top" Height="8.5" Width="Auto" MouseLeftButtonDown="dragWindow_MouseLeftButtonDown" PreviewMouseDown="dragWindowBottom_MouseDown"/>
