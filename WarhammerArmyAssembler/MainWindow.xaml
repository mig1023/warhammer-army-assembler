                            <StackPanel HorizontalAlignment="Center" Grid.Row="1" Grid.Column="2">
                                <Label x:Name="MovementEnemy" FontSize="16"/>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Center" Grid.Row="1" Grid.Column="3">
                                <Label x:Name="WeaponSkillEnemy" FontSize="16"/>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Center" Grid.Row="1" Grid.Column="4">
                                <Label x:Name="BallisticSkillEnemy" FontSize="16"/>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Center" Grid.Row="1" Grid.Column="5">
