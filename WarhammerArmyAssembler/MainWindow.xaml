                                    </Label.LayoutTransform>
                                </Label>
                            </Grid>
                        </Canvas>
                        <Canvas x:Name="unitDetail" VerticalAlignment="Stretch" Width="150" Background="White">
                            <Label x:Name="unitName" Content="" Width="Auto" FontSize="12" Margin="18,15"/>
                        </Canvas>
                    </StackPanel>
                </ScrollViewer>

                <GridSplitter Grid.Row="3" Grid.Column="3" Height="5" ResizeDirection="Rows" IsEnabled="False" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

                <Grid Grid.Row="4" Grid.Column="3" VerticalAlignment="Top" HorizontalAlignment="Stretch" ShowGridLines="False" Width="Auto" Background="White">
