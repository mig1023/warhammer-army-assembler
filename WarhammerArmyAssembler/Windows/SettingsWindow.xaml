<Window x:Class="WarhammerArmyAssembler.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarhammerArmyAssembler"
        WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResizeWithGrip"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800" Closing="Window_Closing" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Border x:Name="CloseSettings" MouseDown="Close_Click">
                <Label Content="Close" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Foreground="White" >
                    <Label.LayoutTransform>
                        <RotateTransform Angle="-90"/>
                    </Label.LayoutTransform>
                </Label>
            </Border>
            <CheckBox Name="DontCheckNumberOfCore" Content="Don't check the number of Core units" HorizontalAlignment="Left" Height="18" VerticalAlignment="Top" Width="229" Checked="Setting_Checked" Unchecked="Setting_Unchecked"/>
        </StackPanel>
    </Grid>
</Window>
